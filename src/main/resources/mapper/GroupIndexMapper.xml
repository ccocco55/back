<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.youeatieat.mapper.GroupIndexMapper">
    <insert id="insertGroupIndex">
        insert into tbl_group_index (group_index_number,product_id)
        values (#{groupIndexNumber},#{productId})
    </insert>
    <select id="selectGroupIndex" >
        select group_index_number
        from tbl_group_index gi
        join tbl_product p on gi.product_id = p.id
        where product_id = #{productId}
    </select>
</mapper>